@{
}
<div>
    <h1>
        @ViewBag.title
    </h1>
</div>
<div>
    @{
        //TODO #1: Use a loop to display job results in a table.
        @foreach (var x in ViewBag.jobs)
        {
            @foreach (var category in ViewBag.jobs)
            {
                <table class="job-listing">
                    <tr>
                        <th>
                            ID:
                        </th>
                        <td>
                            @category.Id
                        </td>
                    </tr>
                    <tr>

                        <th>
                            Name:
                        </th>
                        <td>
                            @category.Name
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Employer:
                        </th>
                        <td>
                            @category.Employer
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Location:
                        </th>
                        <td>
                            @category.Location
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Position Type:
                        </th>
                        <td>
                            @category.PositionType
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Skill:
                        </th>
                        <td>
                            @category.CoreCompetency
                        </td>
                    </tr>
                </table>
            }
        }

    }
</div>